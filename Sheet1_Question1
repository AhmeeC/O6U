#include <iostream>
using namespace std;

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char** argv) {
	int refrence_year = 2020,year;
	bool leap=0;
	cout<<"enter a year "<<"\n";
	cin>>year;
	if (year>2020)
	{
		if(leap = (year-refrence_year)%4==0)
		{
		cout<<year<<" is a Leap year!"<<"\n";
	    }
		else
		{
		cout<<year<<" is not a Leap year!"<<"\n";
		}
    }
    
	else
	{
		if(leap = (refrence_year-year)%4==0)
		{
		cout<<year<<" is a Leap year!"<<"\n";
		}
		else
		{
		cout<<year<<" is not a Leap year!"<<"\n";
		}
	}
	
	
	
	
	return 0;
}
